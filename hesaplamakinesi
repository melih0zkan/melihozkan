def add(a,b):
  print(a+b)
  
def subs(a,b):
  print(a-b)

def mult(a,b):
  print(a*b)
  
def divi(a,b):
  print(a/b)
  
islem=int(input("NE YAPMAK İSTİYORSUN (TOPLAMA(1) ÇIKARMA(2) ÇARPMA(3) BÖLME(4) "))
a=int(input("a: "))
b=int(input("b: "))

if islem==1:
  a+=b
  print("yeni sayi: "+str(a))
elif islem==2:
    a-=b
    print("yeni sayi: "+str(a))
elif islem==3:
    a*=b
    print("yeni sayi: "+str(a))
elif islem==4:
    a/=b
    print("yeni sayi: "+str(a))
